<Window x:Class="Tron_Mario.VictoryScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tron_Mario"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="Death_Screen" Height="1080" Width="1920">
    <Grid Background="#FF292828">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label 
            Grid.Column="1" Grid.Row="1" 
            Content="CONGRATULATIONS!" VerticalAlignment="center" 
            HorizontalAlignment="Center" FontSize="75" Foreground="Green" 
            UseLayoutRounding="False" OpacityMask="Black" FontFamily="Montserrat" Background="#00000000">
        </Label>
        <Label x:Name="PlayerName" Grid.Column="1" Grid.Row="2" 
               Content="Johndoe1234" VerticalAlignment="top" 
               HorizontalAlignment="Center" FontSize="40" Foreground="white" 
               UseLayoutRounding="False" OpacityMask="Black" FontFamily="Montserrat" Background="#00000000"></Label>
        <Label x:Name="Score" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="50" OpacityMask="#8CC7E6" Foreground="Black" >SCORE: 69420</Label>
        <Button Grid.Column="1" Grid.Row="3" Margin="25" Click="MainMenu">Title Screen</Button>
        <Button Grid.Column="0" Grid.Row="5"  Content="BACK" Click="MainMenu" FontSize="50" Style="{DynamicResource ButtonStyleOne}"/>
    </Grid>
</Window>