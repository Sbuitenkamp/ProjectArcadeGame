<Window x:Class="Tron_Mario.Level1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Tron_Mario"
        mc:Ignorable="d"
        Title="Level1" Height="450" Width="800">
    <Canvas x:Name="GameCanvas" Focusable="true" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <!-- make sure to allocate a Canvas.Top value to the player (or any moving object subjected to gravity) or gravity won't work -->
        <Rectangle x:Name="Player" Fill="DarkMagenta" Height="46" Width="42" Canvas.Left="530" Canvas.Top="150" />
        <Rectangle x:Name="Floor" Tag="walkable" Fill="DarkGreen" Height="56" Width="792" Canvas.Left="0" Canvas.Top="363" />
        <Label x:Name="Debug" Content="Label" Canvas.Left="64" Canvas.Top="30" Width="537"/>
    </Canvas>
</Window>
