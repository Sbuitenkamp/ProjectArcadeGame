<Window x:Class="Tron_Mario.Level1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Tron_Mario"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="Level1" Height="1080" Width="1920">
    <Canvas x:Name="GameCanvas" Focusable="true" KeyDown="OnKeyDown" KeyUp="OnKeyUp">

        <TextBlock Canvas.Left="191" Canvas.Top="488" FontFamily="Lane - Narrow"> 
            Texxxxxxxxxxxxxxt
        </TextBlock>
        <Button Canvas.Right="0" Width="250" Height="250" Click="Button_Click">QUIT</Button>
        <Image Source="/Images/Controls1.png" Canvas.Left="64" Canvas.Top="42" />
        <Image Source="/Images/Controls.png" Canvas.Left="312" Canvas.Top="61" />
        <Image Source="/Images/Muis.png" Canvas.Left="525" />
        <!-- NOTE: first rectangle marked with the tag "walkable" in the xaml code will not allow the player to jump if walked upon, ez fix: make a ghost rectangle and hide it somewhere the player will never be able to move to-->
        <!-- <Rectangle x:Name="GhostBox" Tag="walkable" Fill="Transparent" Height="6" Width="144" Canvas.Left="10" /> -->
        <!-- make sure to allocate a Canvas.Top value to the player (or any moving object subjected to gravity) or gravity won't work -->
        <Rectangle x:Name="Player" Fill="DarkMagenta" Height="46" Width="42" Canvas.Left="1037" Canvas.Top="437" />
        <Rectangle Tag="walkable" Fill="DarkGreen" Height="42" Width="222" Canvas.Left="970" Canvas.Top="488" />
        <Rectangle Tag="walkable" Fill="DarkGreen" Height="42" Width="210" Canvas.Left="869" Canvas.Top="704" />
        <Rectangle Tag="walkable" Fill="DarkGreen" Height="42" Width="210" Canvas.Left="685" Canvas.Top="638" />
        <Rectangle Tag="walkable" Fill="DarkGreen" Height="42" Width="210" Canvas.Left="1391" Canvas.Top="684" />
        <Rectangle Tag="walkable" Fill="DarkGreen" Height="42" Width="185" Canvas.Left="498" Canvas.Top="718" />
        <Rectangle Tag="walkable" Fill="DarkGreen" Height="287" Width="1918" Canvas.Left="0" Canvas.Top="795" />
        <Label x:Name="Debug" Content="Label" Canvas.Left="64" Canvas.Top="30" Width="537"/>
    </Canvas>
    
</Window>
